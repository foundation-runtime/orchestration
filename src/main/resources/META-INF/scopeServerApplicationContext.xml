<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">
    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                <property name="objectMapper" ref="mapper"/>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>


    <bean id="mapper" class="com.cisco.oss.foundation.orchestration.scope.model.ObjectMapperFactory"/>

    <context:annotation-config/>
    <context:property-placeholder location="classpath:config.properties"/>
    <context:component-scan base-package="com.cisco"/>
    <bean class="com.mangofactory.swagger.configuration.DocumentationConfig"/>

    <bean id="componentInstallationImpl"
          class="${service.scope.componentInstallationImpl:com.cisco.oss.foundation.orchestration.scope.configuration.MockComponentInstallationImpl}"/>


    <bean id="pluginSourceDirectory" class="java.io.File">
        <constructor-arg type="java.lang.String" value="${plugins.directory:/opt/cisco/scope/plugins}"/>
    </bean>
    <bean id="scriptEngine" class="com.cisco.oss.foundation.orchestration.scope.scripting.ScalaScriptEngineWrapper">
        <constructor-arg name="sourceDirectory" ref="pluginSourceDirectory"/>
    </bean>

</beans>